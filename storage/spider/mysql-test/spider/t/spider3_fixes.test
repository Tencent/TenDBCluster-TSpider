--echo #
--echo # MDEV-27172 Prefix indices on Spider tables may lead to wrong query results
--echo #

--connection child2_1
USE auto_test_remote;

eval CREATE TABLE tbl_a (
  id int NOT NULL,
  greeting TEXT
) $CHILD2_1_ENGINE $CHILD2_1_CHARSET;

SET @general_log_backup = @@global.general_log;
SET @log_output_backup = @@global.log_output;
SET @@global.general_log = 1;
SET @@global.log_output = "TABLE";
TRUNCATE TABLE mysql.general_log;

--connection master_1
--disable_query_log
SET @ignore_single_select_index_backup = @@global.spider_ignore_single_select_index;
SET GLOBAL spider_ignore_single_select_index=OFF;
--enable_query_log
USE auto_test_local;

eval CREATE TABLE tbl_a (
  id int NOT NULL,
  greeting TEXT,
  KEY k (greeting(5))
) $MASTER_1_ENGINE $MASTER_1_CHARSET COMMENT='table "tbl_a", srv "s_2_1"';

INSERT INTO tbl_a VALUES (1, "Hi!"),(2, "Aloha!");
SELECT * FROM tbl_a WHERE greeting = "Aloha!";

eval CREATE TABLE tbl_b (
  id int NOT NULL,
  greeting VARCHAR(255),
  KEY k (greeting)
) $MASTER_1_ENGINE $MASTER_1_CHARSET COMMENT='table "tbl_a", srv "s_2_1"';

SELECT * FROM tbl_a WHERE greeting = "Aloha!";

--connection child2_1
SELECT argument FROM mysql.general_log WHERE argument LIKE 'select %';
SET @@global.general_log = @general_log_backup;
SET @@global.log_output = @log_output_backup;


